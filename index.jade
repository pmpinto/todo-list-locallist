!!!
html(lang="en", "ng-app"="LocalList")
    head

        //- META
        meta(charset="utf-8")
        meta(content="IE=edge", "http-equiv"="X-UA-Compatible")
        meta(content="width=device-width, initial-scale=1", name="viewport")
        meta(name="Author", content="Pedro Pinto")

        //- FAVICON - http://realfavicongenerator.net/
        link(href="apple-touch-icon-57x57.png", rel="apple-touch-icon", sizes="57x57")
        link(href="apple-touch-icon-60x60.png", rel="apple-touch-icon", sizes="60x60")
        link(href="apple-touch-icon-72x72.png", rel="apple-touch-icon", sizes="72x72")
        link(href="apple-touch-icon-76x76.png", rel="apple-touch-icon", sizes="76x76")
        link(href="apple-touch-icon-114x114.png", rel="apple-touch-icon", sizes="114x114")
        link(href="apple-touch-icon-120x120.png", rel="apple-touch-icon", sizes="120x120")
        link(href="apple-touch-icon-144x144.png", rel="apple-touch-icon", sizes="144x144")
        link(href="apple-touch-icon-152x152.png", rel="apple-touch-icon", sizes="152x152")
        link(href="apple-touch-icon-180x180.png", rel="apple-touch-icon", sizes="180x180")
        link(href="favicon-32x32.png", rel="icon", sizes="32x32", type="image/png")
        link(href="favicon-194x194.png", rel="icon", sizes="194x194", type="image/png")
        link(href="favicon-96x96.png", rel="icon", sizes="96x96", type="image/png")
        link(href="android-chrome-192x192.png", rel="icon", sizes="192x192", type="image/png")
        link(href="favicon-16x16.png", rel="icon", sizes="16x16", type="image/png")
        link(href="manifest.json", rel="manifest")
        link(color="#2980b9", href="safari-pinned-tab.svg", rel="mask-icon")
        meta(content="LocalList", name="apple-mobile-web-app-title")
        meta(content="LocalList", name="application-name")
        meta(content="#da532c", name="msapplication-TileColor")
        meta(content="mstile-144x144.png", name="msapplication-TileImage")
        meta(content="#2980b9", name="theme-color")
    
        //- TITLE
        title LocalList â€” A simple todo list hosted on local storage v1.2

        //- CSS
        link(href="assets/style.css", rel="stylesheet")

    body("ng-controller"="TasksController")
        .welcome-screen("ng-if"="!old_visitor")
            .welcome-screen__wrapper
                .welcome-screen__headers
                    h1.big-header Welcome to LocalList!
                    h2.small-header A todo list that gets saved to the local storage of your browser.
                    p.text-grey You can learn more about it on <a class="text-blue" href="https://github.com/pmpinto/todo-list-locallist" target="_blank">GitHub</a> if you wish.

                    a.welcome-screen__link("ng-click"="get_started()") Get started!

        .site-container
            //- LEFT PANEL
            .left-panel
                main
                    //- HEADER / INPUT FIELD
                    header.left-panel__header
                        .left-panel__header-container
                            //- NEW TASK
                            .left-panel__header-task-container("ng-if"="!editing_task")
                                input.left-panel__header-input(placeholder="Type something here...", type="text", "ng-keydown"="keypressed_on_new_task($event, new_task)", "ng-model"="new_task.description")
                                a.left-panel__header-add-button("ng-click"="add_new_task(new_task)") Add to list
                            
                            //- EDITING TASK
                            .left-panel__header-task-container("ng-if"="editing_task")
                                input.left-panel__header-input(placeholder="Forgot something?", type="text", "ng-keydown"="keypressed_on_edit_task($event)", "ng-model"="editing_task.description")
                                a.left-panel__header-add-button("ng-click"="update_task()") Update task

                    //- TASKS LOOP
                    section.tasks
                        .tasks__task("ng-class"="{'task--is-editing': is_editing_task(task)}", "ng-repeat"="task in get_tasks(tasks, false) track by task.id")
                            p.tasks__text-wrapper
                                i.fa.fa-square-o.icon-spacer-right.text-grey("ng-click"="complete_task(task)")
                                span.tasks__title("ng-click"="edit_task(task)") {{ task.description }}
                                a.tasks__btn-remove("ng-click"="remove_task(task)") Remove

                    //- NO TASKS TO DO MESSAGE
                    section("ng-if"="!get_tasks(tasks, false).length && get_tasks(tasks, true).length")
                        .no-tasks-header
                            h1.big-header You are the best!
                            h2.small-header Enjoy the fresh air outside.

                    //- NO TASKS AT ALL MESSAGE
                    section("ng-if"="!get_tasks(tasks, false).length && !get_tasks(tasks, true).length")
                        .no-tasks-header
                            h1.big-header Need help?
                            h2.small-header Type something in the input field above and press enter.

            //- DONE TASKS
            .done-tasks
                aside
                    //- REGULAR X TASKS DONE MESSAGE
                    header.done-tasks__header("ng-if"="get_tasks(tasks, true).length")
                        h1.big-header Congrats!
                        h2.small-header You&#39;ve accomplished {{ get_tasks(tasks, true).length }} tasks.

                    //- MOTIVATOR MESSAGE
                    header.done-tasks__header("ng-if"="!get_tasks(tasks, true).length && get_tasks(tasks, false).length")
                        h1.big-header C&#39;mon, you can do it!
                        h2.small-header You have {{ get_tasks(tasks, false).length }} tasks to accomplish.

                    //- NO TASKS AT ALL MESSAGE
                    header.done-tasks__header("ng-if"="!get_tasks(tasks, true).length && !get_tasks(tasks, false).length")
                        h1.big-header Still nothing...
                        h2.small-header Add some tasks on the left.

                    //- COMPLETED TASKS LOOP
                    section
                        .done-tasks__task("ng-animate"="'task'", "ng-repeat"="task in get_tasks(tasks, true) | orderBy: '-completedDate' track by task.completedDate")
                            p.done-tasks__task-text
                                i.fa.fa-check-square-o.icon-spacer-right("ng-click"="uncomplete_task(task)")
                                {{ task.description }}

                    //- FOOTER
                    footer
                        p.footer-text Check this project at <a class="text-blue" href="https://github.com/pmpinto/todo-list-locallist" target="_blank">GitHub</a>!


        //- JAVASCRIPTS
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular-animate.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-local-storage/0.2.2/angular-local-storage.min.js")
        script(src="assets/scripts.min.js")
